<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BrandActivity"
    android:background="@drawable/membership">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@drawable/bar"
                android:gravity="center|center_horizontal"
                android:text="" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_inputEmail"
            android:layout_width="77dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/basicinfo"
            android:paddingLeft="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_imputEmail"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangular"
                android:ems="10"
                android:hint="이메일"
                android:paddingLeft="21dp"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_checkDuplicateEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/checkone"
                android:text="" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_inputPassword"
            android:layout_width="73dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/pswrd"
            android:text="" />

        <EditText
            android:id="@+id/ed_inputPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputnickname"
            android:ems="10"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/ed_inputPasswordCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/passwordcheck"
            android:ems="10"
            android:hint=""
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/tv_inputNickname"
            android:layout_width="65dp"
            android:layout_height="31dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/namenam"
            android:text="" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_inputNickname"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:background="@drawable/inputnickname"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_checkDuplicateNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/check"
                android:text="" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_CompleteJoin"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/checkbutton"
            android:text="" />

    </LinearLayout>
</LinearLayout>